# Production Environment Configuration
# Copy this file to .env and update with your actual production values

# Database Configuration
DATABASE_URL=postgresql://protego_user:YOUR_DB_PASSWORD@localhost:5432/protego

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=your_twilio_phone_number
TEST_MODE=false

# Alert Configuration
ALERT_CONFIDENCE_THRESHOLD=0.8
ALERT_COUNTDOWN_SECONDS=5

# Security
SECRET_KEY=your-super-secret-key-generate-with-openssl-rand-base64-32
ALGORITHM=HS256

# CORS - Add your Vercel domain here
ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-custom-domain.com

# Environment
ENVIRONMENT=production
